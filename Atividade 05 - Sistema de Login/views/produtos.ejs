<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container my-4">
    <!-- Formulário de Cadastro de Produtos -->
    <div class="card shadow-lg" style="border-radius: 10px; background-color: rgba(255, 255, 255, 0.8);">
        <div class="card-header text-center" style="background-color: #0B192C; color: white;">
            <h2>Cadastrar Produto</h2>
        </div>
        <div class="card-body">
            <form action="/produtos/new" method="POST">
                <div class="mb-3">
                    <label for="nome" class="form-label">Nome do Produto:</label>
                    <input type="text" name="nome" id="nome" placeholder="Insira o nome do produto" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="preco" class="form-label">Preço do Produto:</label>
                    <input type="number" name="preco" id="preco" placeholder="Insira o preço do produto" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="categoria" class="form-label">Categoria do Produto:</label>
                    <input type="text" name="categoria" id="categoria" placeholder="Insira a categoria do produto" class="form-control" required>
                </div>

                <input type="submit" class="btn btn-success" style="background-color: #FF6500;" value="Cadastrar Produto">
            </form>
        </div>
    </div>

    <!-- Tabela de Produtos -->
    <div class="card shadow-lg my-4" style="border-radius: 10px; background-color: rgba(255, 255, 255, 0.8);">
        <div class="card-header text-center" style="background-color: #0B192C; color: white;">
            <h2>Lista de Produtos</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped text-center">
                <thead class="bg-light">
                    <tr>
                        <th></th>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% produtos.forEach(produto => { %>
                    <tr>
                        <td><img src="imgs/product.png" width="50px" alt="Produto"></td>
                        <td><%= produto.nome %></td>
                        <td>R$ <%= produto.preco.toFixed(2) %></td>
                        <td><%= produto.categoria %></td>
                        <td>
                            <a class="btn btn-warning btn-xs" href="/produtos/edit/<%= produto.id %>" style="font-size: 0.8rem; padding: 5px 8px; width: 70px; margin-right: 5px;">Editar</a>
                            <a class="btn btn-danger btn-xs" href="/produtos/delete/<%= produto.id %>" style="font-size: 0.8rem; padding: 5px 8px; width: 70px;" onclick="return confirm('Quer mesmo deletar o Produto <%= produto.nome %>?')">Deletar</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ('partials/footer.ejs') %>
